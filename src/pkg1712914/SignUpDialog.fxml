<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="TOP_CENTER" text="Đăng ký" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="signup_username" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Tên đăng nhập" style="-fx-border-radius: 20px;">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="signup_fullname" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Họ và tên" style="-fx-border-radius: 20px;">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="signup_email" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Email" style="-fx-border-radius: 20px;">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="signup_password" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Mật khẩu">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="signup_password_confirm" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Nhập lại mật khẩu">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </PasswordField>
            <Label fx:id="signup_error_text" alignment="CENTER" contentDisplay="CENTER" prefHeight="41.0" prefWidth="249.0" style="-fx-wrap-text: true;" text="Thông tin nhập vào không hợp lệ, vui lòng nhập lại!" textAlignment="CENTER" textFill="#b55a5a">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="signup_button" mnemonicParsing="false" text="Đăng ký">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
