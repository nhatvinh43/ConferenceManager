         <children>
            <Label alignment="TOP_CENTER" text="Thêm địa điểm" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="name" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Tên địa điểm" style="-fx-border-radius: 20px;" />
            <TextField fx:id="capacity" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Sức chứa" style="-fx-border-radius: 20px;" />
            <TextField fx:id="address" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" promptText="Địa chỉ" style="-fx-border-radius: 20px;" />
            <Label fx:id="error" alignment="CENTER" contentDisplay="CENTER" text="Không được bỏ trống trường nào!" textFill="#b55a5a" />
            <Button fx:id="save" mnemonicParsing="false" text="Thêm" />
         </children>
      </VBox>
   </children>
</AnchorPane>
