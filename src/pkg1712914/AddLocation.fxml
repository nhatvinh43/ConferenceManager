<AnchorPane id="AnchorPane" prefHeight="383.0" prefWidth="350.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
